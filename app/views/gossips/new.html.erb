<!-- ALERT MESSAGE IF INVALID GOSSIP -->

<% if flash[:error] %>
	<div class="alert alert-danger" role="alert">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  <p>The gossip could not be created due to the following reason(s) :</p>
	  <ul>
	    <% @gossip.errors.full_messages.each do |message| %>
	      <li><%= message %></li>
	    <% end %>
	  </ul>
	  </div>
<% end %>


<!-- CREATE GOSSIP FORM -->
<br />
<div class = "center">
	<h1>Create your gossip !</h1>
	<br />

	<%= form_tag gossips_path, method: "post" do %>

		  <span><strong><%= label_tag 'Title'%></strong></span>
		  <%= text_field_tag 'title', nil, class: "form-control", placeholder: "Your gossip title" %>
		  <br /> 

		  <span><strong><%= label_tag 'Content'%></strong></span>
		  <%= text_area_tag 'content', nil , class: "form-control", placeholder: "Write your gossip", rows:"5" %>
		  <br /> 

	  	<%= submit_tag "Create Gossip", class: "btn btn-primary btn-lg btn-block" %>

	<% end %>
</div>


